function [out,fig]=default_callback_audio_recording(in)
// input and output arguments are static
// Be careful not to wipe out the previous state of the in or out variable accidentally
if in.?index==0
//add something if you'd like
	out = 0
elseif in.?index==1
	out = in.?data
else // in.?index>1
	out ++= in.?data
end



